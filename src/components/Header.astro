<!-- Main Header (Sticky) -->
<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
        <img 
          src="/Images/SP - Logo.svg" 
          alt="Septimius Properties Logo" 
          class="h-16 md:h-20 w-auto"
        />
      </a>

      <!-- Desktop Navigation - Centered -->
      <nav class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 space-x-8">
        <a href="/" class="text-gray-700 hover:text-amber-500 font-medium transition-colors">Home</a>
        <a href="/about" class="text-gray-700 hover:text-amber-500 font-medium transition-colors">About</a>
        <a href="/services" class="text-gray-700 hover:text-amber-500 font-medium transition-colors">Services</a>
        <a href="/projects" class="text-gray-700 hover:text-amber-500 font-medium transition-colors">Projects</a>
        <a href="/contact" class="text-gray-700 hover:text-amber-500 font-medium transition-colors">Contact</a>
      </nav>

      <!-- Get in Touch Button - Desktop -->
      <a href="/contact" class="hidden md:inline-block border-2 border-amber-500 text-amber-500 px-6 py-2.5 text-sm font-bold hover:bg-amber-500 hover:text-white transition-colors uppercase tracking-wide rounded">
        Get in Touch
      </a>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-amber-500 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a href="/" class="text-gray-700 hover:text-amber-500 font-medium transition-colors py-2 border-b border-gray-200">Home</a>
        <a href="/about" class="text-gray-700 hover:text-amber-500 font-medium transition-colors py-2 border-b border-gray-200">About</a>
        <a href="/services" class="text-gray-700 hover:text-amber-500 font-medium transition-colors py-2 border-b border-gray-200">Services</a>
        <a href="/projects" class="text-gray-700 hover:text-amber-500 font-medium transition-colors py-2 border-b border-gray-200">Projects</a>
        <a href="/contact" class="text-gray-700 hover:text-amber-500 font-medium transition-colors py-2 border-b border-gray-200">Contact</a>
        <a href="/contact" class="border-2 border-amber-500 text-amber-500 px-6 py-2.5 text-sm font-bold hover:bg-amber-500 hover:text-white transition-colors uppercase tracking-wide rounded text-center mt-2">
          Get in Touch
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });

  // Hide top bar on scroll
  let lastScroll = 0;
  const topBar = document.getElementById('top-bar');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      topBar?.classList.add('hidden');
    } else {
      topBar?.classList.remove('hidden');
    }
    
    lastScroll = currentScroll;
  });
</script>
