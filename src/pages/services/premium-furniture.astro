---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Premium Furniture | Septimius Properties" description="Bespoke furniture sourcing and interior styling services">
  <!-- Animated Background Element -->
  <div class="fixed inset-0 -z-10 overflow-hidden">
    <div class="absolute -top-1/2 -right-1/2 w-96 h-96 rounded-full bg-amber-200 opacity-10 blur-3xl animate-blob"></div>
    <div class="absolute -bottom-1/2 -left-1/2 w-96 h-96 rounded-full bg-amber-300 opacity-10 blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-96 h-96 rounded-full bg-amber-400 opacity-10 blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <!-- Hero Section with Parallax -->
  <section class="relative h-[90vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gray-900">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900/90"></div>
      <img 
        src="/Images/Universal Cafe/Universal Cafe - Septimius Pro.-1.jpg" 
        alt="Premium Furniture" 
        class="w-full h-full object-cover opacity-60 scale-110 animate-subtle-zoom"
      />
    </div>
    
    <div class="relative z-10 text-center text-white px-4 animate-fade-in-up">
      <span class="block text-amber-400 text-sm md:text-base uppercase tracking-[0.3em] mb-6">Septimius Properties</span>
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">Premium Furniture <br/>& Styling</h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto font-light">Curated pieces that transform spaces into exceptional experiences</p>
      <div class="flex items-center justify-center gap-6">
        <a href="/contact" class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden font-medium transition duration-300 ease-out border-2 border-amber-500 rounded-lg shadow-md text-xl">
          <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-amber-500 group-hover:translate-x-0 ease">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
          <span class="absolute flex items-center justify-center w-full h-full text-amber-500 transition-all duration-300 transform group-hover:translate-x-full ease">Get Started</span>
          <span class="relative invisible">Get Started</span>
        </a>
        <a 
          href="#services" 
          class="inline-flex items-center gap-2 text-white hover:text-amber-400 transition-colors"
          onclick="scrollToServices(event)"
        >
          <span>Explore Services</span>
          <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-24 md:py-32 bg-white relative">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <!-- Left Image -->
          <div class="w-full lg:w-1/2">
            <div class="relative">
              <img 
                src="/Images/Lakehouse Property/48371789-7f8f-4150-bb56-fc6d2f360e92.avif" 
                alt="Premium furniture showcase" 
                class="w-full h-[300px] md:h-[600px] object-cover rounded-lg shadow-xl"
              />
              <!-- Decorative Elements -->
              <div class="absolute -bottom-6 -right-6 w-2/3 h-2/3 bg-amber-100 rounded-2xl -z-10"></div>
              <div class="absolute -top-6 -left-6 w-2/3 h-2/3 border-2 border-amber-500 rounded-2xl -z-10"></div>
            </div>
          </div>

          <!-- Right Content -->
          <div class="w-full lg:w-1/2">
            <span class="text-amber-500 text-sm uppercase tracking-[0.3em] mb-4 block">Premium Furniture Services</span>
            <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
              Curated Excellence <br/>for Every Space
            </h2>
            <p class="text-gray-600 text-lg mb-12">
              We source and supply premium furniture and décor that elevates your space. From contemporary pieces to timeless classics, our curated collection ensures quality, style, and functionality for residential and commercial projects.
            </p>

            <!-- Animated Stats Grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
              <div class="text-center" data-aos="fade-up">
                <div class="text-4xl md:text-5xl font-bold text-amber-500 mb-2 animate-count" data-target="500">0</div>
                <p class="text-gray-600">Premium Pieces</p>
              </div>
              <div class="text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="text-4xl md:text-5xl font-bold text-amber-500 mb-2 animate-count" data-target="50">0</div>
                <p class="text-gray-600">Design Partners</p>
              </div>
              <div class="text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="text-4xl md:text-5xl font-bold text-amber-500 mb-2 animate-count" data-target="100">0</div>
                <p class="text-gray-600">Projects Furnished</p>
              </div>
              <div class="text-center" data-aos="fade-up" data-aos-delay="300">
                <div class="text-4xl md:text-5xl font-bold text-amber-500 mb-2"><span class="animate-count" data-target="100">0</span>%</div>
                <p class="text-gray-600">Satisfaction</p>
              </div>
            </div>

            <!-- Services Grid -->
            <div class="grid md:grid-cols-2 gap-8 mb-10">
              <div class="relative">
                <h4 class="text-xl font-bold text-gray-900 mb-3">What We Offer</h4>
                <ul class="text-gray-600 space-y-2">
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Furniture Sourcing
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Interior Styling
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Custom Solutions
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Delivery & Installation
                  </li>
                </ul>
                <div class="absolute -left-4 top-0 h-full w-1 bg-amber-500"></div>
              </div>
              <div class="relative">
                <h4 class="text-xl font-bold text-gray-900 mb-3">Our Approach</h4>
                <ul class="text-gray-600 space-y-2">
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Quality First
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Personalized Service
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Sustainable Choices
                  </li>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    On-Time Delivery
                  </li>
                </ul>
                <div class="absolute -left-4 top-0 h-full w-1 bg-amber-500"></div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/contact" class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden font-medium transition duration-300 ease-out border-2 border-amber-500 rounded-lg shadow-md text-lg">
                <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-amber-500 group-hover:translate-x-0 ease">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
                <span class="absolute flex items-center justify-center w-full h-full text-amber-500 transition-all duration-300 transform group-hover:translate-x-full ease">Get Quote</span>
                <span class="relative invisible">Get Quote</span>
              </a>
              <a href="/projects" class="inline-block bg-gray-900 text-white px-8 py-3 rounded-lg text-center hover:bg-gray-800 transition-colors text-lg">
                View Projects
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-amber-500 text-sm uppercase tracking-[0.3em] mb-4 block">Our Services</span>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Complete Furniture Solutions</h2>
        <div class="w-24 h-1 bg-amber-500 mx-auto mb-8"></div>
        <p class="text-gray-600 text-lg">From concept to installation, we handle every aspect of furnishing your space.</p>
      </div>

      <!-- Services Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Residential Furniture -->
        <div class="group relative bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-b from-amber-500/0 to-amber-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="p-8 relative z-10">
            <div class="mb-6 w-16 h-16 bg-amber-500/10 rounded-xl flex items-center justify-center group-hover:bg-amber-500 transition-colors">
              <svg class="w-8 h-8 text-amber-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-amber-500 transition-colors">Residential Furniture</h3>
            <p class="text-gray-600 mb-6">Transform your home with carefully selected pieces that reflect your personal style and enhance comfort.</p>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Living Room Furniture
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Bedroom Collections
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Dining Furniture
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Outdoor Furniture
              </li>
            </ul>
          </div>
        </div>

        <!-- Commercial Furniture -->
        <div class="group relative bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-b from-amber-500/0 to-amber-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="p-8 relative z-10">
            <div class="mb-6 w-16 h-16 bg-amber-500/10 rounded-xl flex items-center justify-center group-hover:bg-amber-500 transition-colors">
              <svg class="w-8 h-8 text-amber-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-amber-500 transition-colors">Commercial Furniture</h3>
            <p class="text-gray-600 mb-6">Elevate your business environment with professional furniture solutions that impress clients and inspire teams.</p>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Office Furniture
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
