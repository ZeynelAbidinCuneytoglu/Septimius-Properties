---
// about.astro - About Us page with enhanced design
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About Us" description="Learn about Septimius Properties - delivering high-quality construction, bespoke architectural solutions, and premium rental properties.">
  
  <!-- Hero Section with Image Overlay -->
  <section class="relative h-96 md:h-[500px] flex items-center justify-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-gray-900">
      <img 
        src="/Images/Universal Cafe/Universal Cafe - Septimius Pro.-1.jpg" 
        alt="Interior design background" 
        class="w-full h-full object-cover opacity-60"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center text-white animate-fade-in-up">
      <h1 class="text-5xl md:text-7xl font-bold mb-4">We Are Septimius Properties</h1>
      <nav class="text-sm md:text-base mt-4">
        <a href="/" class="hover:text-amber-400 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <span class="text-amber-400">ABOUT</span>
      </nav>
    </div>
  </section>

  <!-- Main About Section - Team Photo and Description -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Team Photo on Left -->
        <div class="order-2 lg:order-1 relative">
          <img 
            src="/Images/Architect office images/WhatsApp Image 2025-09-28 at 15.56.41.jpeg" 
            alt="Septimius Properties team" 
            class="w-full rounded-lg shadow-xl relative z-10"
          />
