---
// projects/index.astro - Projects listing page
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  {
    id: 'universal-cafe',
    title: 'Universal Café – Dublin',
    category: 'Design, Fitout, Furniture',
    tags: ['interior', 'commercial'],
    description: 'A modern café design featuring contemporary furniture, custom fitout solutions, and innovative interior design.',
    image: '/Images/Universal Cafe/Universal Cafe - Septimius Pro.-1.jpg',
    slug: '/projects/universal-cafe'
  },
  {
    id: 'sheelin-lakehouse',
    title: 'Sheelin Lakehouse',
    category: 'Design, Renovate, Furniture, Rental',
    tags: ['interior', 'renovation', 'architecture'],
    description: 'Complete renovation and design transformation of a lakeside property into a premium rental destination.',
    image: '/Images/Lakehouse Property/DJI_0346.JPG',
    slug: '/projects/sheelin-lakehouse'
  },
  {
    id: 'wicklow-holiday-home',
    title: 'Wicklow Holiday Home',
    category: 'Architectural Design',
    tags: ['architecture'],
    description: 'Contemporary architectural design for a luxury holiday home in the scenic Wicklow mountains.',
    image: '/Images/Architect office images/WhatsApp Image 2025-09-28 at 15.56.41 (1).jpeg',
    slug: '/projects/wicklow-holiday-home'
  }
];
---

<BaseLayout title="Our Projects" description="Explore our portfolio of exceptional projects showcasing innovative design, architecture, and property development.">
  
  <!-- Hero Section with Image Overlay -->
  <section class="relative h-96 md:h-[500px] flex items-center justify-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-gray-900">
      <img 
        src="/Images/Universal Cafe/Universal Cafe - Septimius Pro.-6.jpg" 
        alt="Projects background" 
        class="w-full h-full object-cover opacity-60"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center text-white">
      <h1 class="text-5xl md:text-7xl font-bold mb-4">Our Projects</h1>
      <nav class="text-sm md:text-base mt-4">
        <a href="/" class="hover:text-amber-400 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <span class="text-amber-400">PROJECTS</span>
      </nav>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <p class="text-amber-500 font-bold uppercase text-sm tracking-wider mb-4">OUR PROJECT</p>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Recent Projects</h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
          Explore our portfolio of exceptional projects that showcase our expertise in design, architecture, and property development.
        </p>
        <div class="h-0.5 w-24 bg-gray-300 mx-auto mt-6"></div>
      </div>

      <!-- Project Filter Navigation -->
      <div class="flex justify-center mb-12 flex-wrap gap-4">
        <button 
          data-filter="all" 
          class="filter-btn active text-gray-900 font-semibold border-b-2 border-amber-500 pb-2 px-4 transition-all duration-300 hover:text-amber-500"
        >
          ALL
        </button>
        <button 
          data-filter="interior" 
          class="filter-btn text-gray-600 font-semibold pb-2 px-4 transition-all duration-300 hover:text-amber-500 border-b-2 border-transparent"
        >
          INTERIOR
        </button>
        <button 
          data-filter="architecture" 
          class="filter-btn text-gray-600 font-semibold pb-2 px-4 transition-all duration-300 hover:text-amber-500 border-b-2 border-transparent"
        >
          ARCHITECTURE
        </button>
        <button 
          data-filter="renovation" 
          class="filter-btn text-gray-600 font-semibold pb-2 px-4 transition-all duration-300 hover:text-amber-500 border-b-2 border-transparent"
        >
          RENOVATION
        </button>
        <button 
          data-filter="commercial" 
          class="filter-btn text-gray-600 font-semibold pb-2 px-4 transition-all duration-300 hover:text-amber-500 border-b-2 border-transparent"
        >
          COMMERCIAL
        </button>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
        {projects.map((project) => (
          <div 
            class="project-card bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group"
            data-tags={project.tags.join(',')}
          >
            <div class="relative overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{project.title}</h3>
              <p class="text-amber-500 font-semibold mb-4 uppercase text-sm tracking-wide">{project.category}</p>
              <p class="text-gray-600 mb-6 leading-relaxed">{project.description}</p>
              <a 
                href={project.slug} 
                class="inline-flex items-center text-amber-500 font-semibold hover:text-amber-600 transition-colors uppercase tracking-wide text-sm group"
              >
                Learn More 
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- No Results Message (Hidden by default) -->
      <div id="no-results" class="hidden text-center py-12">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No Projects Found</h3>
        <p class="text-gray-600">Try selecting a different category to see more projects.</p>
      </div>
    </div>
  </section>

  <!-- Enhanced Call to Action Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255,255,255,0.1) 10px, rgba(255,255,255,0.1) 20px);"></div>
    </div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
      <span class="text-amber-400 text-sm uppercase tracking-[0.3em] mb-4 block">Let's Work Together</span>
      <h2 class="text-3xl md:text-5xl font-bold mb-6">Ready to Start Your Project?</h2>
      <p class="text-lg md:text-xl mb-10 max-w-2xl mx-auto text-gray-300">
        Let's work together to bring your vision to life. Contact us today to discuss your project requirements and discover how we can help.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="group relative inline-flex items-center justify-center px-8 py-4 overflow-hidden font-medium transition duration-300 ease-out border-2 border-amber-500 rounded-lg shadow-md text-lg">
          <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-amber-500 group-hover:translate-x-0 ease">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
          <span class="absolute flex items-center justify-center w-full h-full text-amber-500 transition-all duration-300 transform group-hover:translate-x-full ease">Get in Touch</span>
          <span class="relative invisible">Get in Touch</span>
        </a>
        <a href="/services" class="inline-block px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition-colors duration-300 text-lg">
          Explore Services
        </a>
      </div>

      <!-- Stats Cards at Bottom -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16 max-w-5xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <div class="text-4xl font-bold text-amber-400 mb-2">100+</div>
          <div class="text-sm text-gray-300 uppercase tracking-wider">Projects Completed</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <div class="text-4xl font-bold text-amber-400 mb-2">15+</div>
          <div class="text-sm text-gray-300 uppercase tracking-wider">Years Experience</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <div class="text-4xl font-bold text-amber-400 mb-2">250+</div>
          <div class="text-sm text-gray-300 uppercase tracking-wider">Properties Managed</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <div class="text-4xl font-bold text-amber-400 mb-2">100%</div>
          <div class="text-sm text-gray-300 uppercase tracking-wider">Client Satisfaction</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter Script -->
  <script>
    // Project filtering functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');
    const noResults = document.getElementById('no-results');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');
        
        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'text-gray-900', 'border-amber-500');
          btn.classList.add('text-gray-600', 'border-transparent');
        });
        button.classList.add('active', 'text-gray-900', 'border-amber-500');
        button.classList.remove('text-gray-600', 'border-transparent');

        let visibleCount = 0;

        // Filter projects with animation
        projectCards.forEach(card => {
          const tags = card.getAttribute('data-tags').split(',');
          
          if (filter === 'all' || tags.includes(filter)) {
            card.style.display = 'block';
            // Add fade-in animation
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
              card.style.transition = 'all 0.5s ease-out';
              card.style.opacity = '1';
              card.style.transform = 'translateY(0)';
            }, 50);
            
            visibleCount++;
          } else {
            card.style.transition = 'all 0.3s ease-out';
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
              card.style.display = 'none';
            }, 300);
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          noResults.classList.remove('hidden');
          noResults.style.opacity = '0';
          setTimeout(() => {
            noResults.style.transition = 'opacity 0.5s ease-out';
            noResults.style.opacity = '1';
          }, 50);
        } else {
          noResults.classList.add('hidden');
        }
      });
    });
  </script>

  <style>
    .filter-btn.active {
      color: #f59e0b;
    }
    
    .project-card {
      transition: all 0.3s ease-out;
    }
  </style>

</BaseLayout>
